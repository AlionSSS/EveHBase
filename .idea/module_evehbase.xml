<?xml version="1.0" encoding="UTF-8"?>
<project name="module_evehbase" default="compile.module.evehbase">
  <dirname property="module.evehbase.basedir" file="${ant.file.module_evehbase}"/>
  
  <property name="module.jdk.home.evehbase" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.evehbase" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.evehbase" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.evehbase" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="evehbase.output.dir" value="${module.evehbase.basedir}/../out/production/EveHBase"/>
  <property name="evehbase.testoutput.dir" value="${module.evehbase.basedir}/../out/test/EveHBase"/>
  
  <path id="evehbase.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="evehbase.module.production.classpath">
    <path refid="${module.jdk.classpath.evehbase}"/>
    <pathelement location="${basedir}/../../../Downloads/ccc/hbase-example.jar"/>
  </path>
  
  <path id="evehbase.runtime.production.module.classpath">
    <pathelement location="${evehbase.output.dir}"/>
    <pathelement location="${basedir}/../../../Downloads/ccc/hbase-example.jar"/>
  </path>
  
  <path id="evehbase.module.classpath">
    <path refid="${module.jdk.classpath.evehbase}"/>
    <pathelement location="${evehbase.output.dir}"/>
    <pathelement location="${basedir}/../../../Downloads/ccc/hbase-example.jar"/>
  </path>
  
  <path id="evehbase.runtime.module.classpath">
    <pathelement location="${evehbase.testoutput.dir}"/>
    <pathelement location="${evehbase.output.dir}"/>
    <pathelement location="${basedir}/../../../Downloads/ccc/hbase-example.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.evehbase">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.evehbase">
    <patternset refid="excluded.from.module.evehbase"/>
  </patternset>
  
  <path id="evehbase.module.sourcepath">
    <dirset dir="${module.evehbase.basedir}/../../EveHBase">
      <include name="src"/>
      <include name="resources"/>
    </dirset>
  </path>
  
  <path id="evehbase.module.test.sourcepath">
    <dirset dir="${module.evehbase.basedir}/../../EveHBase">
      <include name="test"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.evehbase" depends="compile.module.evehbase.production,compile.module.evehbase.tests" description="Compile module EveHBase"/>
  
  <target name="compile.module.evehbase.production" depends="register.custom.compilers" description="Compile module EveHBase; production classes">
    <mkdir dir="${evehbase.output.dir}"/>
    <javac2 destdir="${evehbase.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.evehbase}/javac">
      <compilerarg line="${compiler.args.evehbase}"/>
      <bootclasspath refid="evehbase.module.bootclasspath"/>
      <classpath refid="evehbase.module.production.classpath"/>
      <src refid="evehbase.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.evehbase"/>
    </javac2>
    
    <copy todir="${evehbase.output.dir}">
      <fileset dir="${module.evehbase.basedir}/../src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.evehbase.basedir}/../resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.evehbase.tests" depends="register.custom.compilers,compile.module.evehbase.production" description="compile module EveHBase; test classes" unless="skip.tests">
    <mkdir dir="${evehbase.testoutput.dir}"/>
    <javac2 destdir="${evehbase.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.evehbase}/javac">
      <compilerarg line="${compiler.args.evehbase}"/>
      <bootclasspath refid="evehbase.module.bootclasspath"/>
      <classpath refid="evehbase.module.classpath"/>
      <src refid="evehbase.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.evehbase"/>
    </javac2>
    
    <copy todir="${evehbase.testoutput.dir}">
      <fileset dir="${module.evehbase.basedir}/../test">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.evehbase" description="cleanup module">
    <delete dir="${evehbase.output.dir}"/>
    <delete dir="${evehbase.testoutput.dir}"/>
  </target>
</project>